{
  "name": "jounx",
  "version": "1.1.1",
  "description": "A more useful console and/or file logging solution with colors",
  "main": "build/",
  "types": "build/*.d.ts",
  "private": false,
  "scripts": {
    "tsc": "tsc",
    "test": "mocha --full-trace --inline-diffs --recursive",
    "test:dev": "mocha --full-trace --inline-diffs --recursive --watch",
    "lint:test": "eslint -c .eslintrc.js '**/*.{js,ts,json}'",
    "lint:fix": "eslint -c .eslintrc.js --fix '**/*.{js,ts,json}'",
    "clean": "rm -rf build logs *debug*.log",
    "prepublish": "npm run clean && npm run lint:test && npm run tsc && npm test",
    "postinstall": "npm run clean && npm run tsc"
  },
  "keywords": [
    "logging",
    "logger",
    "log",
    "console",
    "chalk"
  ],
  "author": "Deryck Henson",
  "repository": {
    "type": "git",
    "url": "https://github.com/topazjs/jounx.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^4.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/eslint": "^6.8.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.1",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "chai": "^4.2.0",
    "eslint": "^7.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^7.1.2",
    "typescript": "^3.9.2"
  },
  "engineStrict": false,
  "engines": {
    "node": ">=12.13.0",
    "npm": ">=6.14.4"
  }
}
